# Ruby
seconds = 0
minutes = 0
hours = 0

loop do
    seconds += 1
    sleep(1)
    if seconds > 59
        seconds = 0
        minutes += 1
        if minutes > 59
            minutes = 0
            hours += 1
        end
    end
    print "\r #{hours}:#{minutes}:#{seconds}"
    $stdout.flush
end
